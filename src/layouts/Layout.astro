---
import '../styles/global.css';
import '@fontsource/aldrich';
import '@fontsource/roboto-mono';
import "../styles/scrollbar.css";
export interface Props {
	title: string;
}
const { title } = Astro.props;
//import {ViewTransitions} from 'astro:transitions';
import Header from '../components/Header.astro';
import SidebarMenu from '../components/SidebarMenu.astro';
import Footer from '../components/Footer.astro';

import { SpeedInsights } from "@vercel/speed-insights/next"

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-60H2EX45KM"></script>
		<script>
  		window.dataLayer = window.dataLayer || [];
  		function gtag(){dataLayer.push(arguments);}
  		gtag('js', new Date());

  		gtag('config', 'G-60H2EX45KM');
		</script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/logos/ChromeDog_Logo-Icon.svg" />
		<link rel="apple-touch-icon" href="/logos/apple-touch-icon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content="Alpha Chrome Web Design &amp; Development" />
		<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
	</head>
	<body>
		<div id="pageElements" class="background-0">
			<SidebarMenu />
			<div id="contentDisplay">
        <Header />
				<slot/>
				<Footer />
			</div>
		</div>
		<SpeedInsights />
	</body>
</html>

<style is:global>
	/* Mobile Navigation */
	#mobileHeader {
		display: flex;
    	padding: 8px 0;
    	width: 100%;
    	flex-direction: row;
    	justify-content: center;
	}
	#mainMenuLink {
		font-family: var(--mono-font);
		text-transform: uppercase;
	}
	@media(min-width:640px) {
		#sidebarMenu {
			display: flex;
		}
		#mobileHeader {
			display: none;
		}
	}
	/* End Mobile Navigation */
	@media(min-width: 640px) {
		.sbm-slideinview {
			left: 0px !important;
		}
	}
	footer {
		align-self: flex-end;
	}
	#contentDisplay {
    max-width: 100%;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
    overflow: hidden;
	}
	/* main {
		padding: 0 40px 40px 40px;
    }  */
	@media(min-width:640px) {
		/* main {
			padding: 80px;
			top: -50px;
		} */
		#pageElements {
			grid-template-columns: minmax(250px, 1fr) minmax(300px, 3fr);
		}
	}
</style>

<script type="text/javascript" type="module">
	const sidemenuEl = document.getElementById('sidebarMenu');
	const sidemenuElWidth = Math.floor(sidemenuEl.getBoundingClientRect().width * 0.7);
	
	document.onmousemove = (event) => {
	  const {
		clientX
	  } = event 
	  if (clientX < sidemenuElWidth) 
		sidemenuEl.classList.add('sbm-slideinview');
	  else 
		sidemenuEl.classList.remove('sbm-slideinview');
	}
</script>