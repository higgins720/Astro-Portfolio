---
import '../styles/global.css';
import "../styles/scrollbar.css";
export interface Props {
	title: string;
}
const { title } = Astro.props;
//import {ViewTransitions} from 'astro:transitions';
import SidebarMenu from '../components/SidebarMenu.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/logos/ChromeDog_Logo-Icon-Small.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="pageElements">
			<SidebarMenu />
			<div id="contentDisplay">
				<slot />
				<Footer />
			</div>
		</div>
	</body>
</html>

<style is:global>
	/* Mobile Navigation */
	#mobileHeader {
		display: flex;
    	padding: 8px 0;
    	width: 100%;
    	flex-direction: row;
    	justify-content: center;
	}
	#mainMenuLink {
		font-family: var(--mono-font);
		text-transform: uppercase;
	}
	@media(min-width:640px) {
		#sidebarMenu {
			display: flex;
		}
		#mobileHeader {
			display: none;
		}
	}
	/* End Mobile Navigation */
	@media(min-width: 640px) {
		.sbm-slideinview {
			left: 0px !important;
		}
	}
	footer {
		align-self: flex-end;
	}
	#contentDisplay {
		width: 100ch;
    	max-width: 100%;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
	main {
		padding: 0 40px 40px 40px;
    } 
	@media(min-width:640px) {
		main {
			padding: 80px;
			top: -50px;
		}
		#pageElements {
			grid-template-columns: minmax(250px, 1fr) minmax(300px, 3fr);
		}
	}
</style>

<script type="text/javascript" type="module">
	const sidemenuEl = document.getElementById('sidebarMenu');
	const sidemenuElWidth = Math.floor(sidemenuEl.getBoundingClientRect().width * 0.7);
	
	document.onmousemove = (event) => {
	  const {
		clientX
	  } = event 
	  if (clientX < sidemenuElWidth) 
		sidemenuEl.classList.add('sbm-slideinview');
	  else 
		sidemenuEl.classList.remove('sbm-slideinview');
	}
</script>