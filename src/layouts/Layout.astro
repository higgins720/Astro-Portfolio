---
import Navigation from '../components/Navigation.astro';
export interface Props {
	title: string;
}
const { title } = Astro.props;
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navigation />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--accent: #00d4ff;
		--accent-hover: #b5f3ff;
		--accent-active: #00a2cc;
		--accent-gradient: linear-gradient(45deg, rgb(9,9,121), var(--accent) 30%);
		--text-emphasis: #fff;
		--text-muted: #646464;
		--text-body: #3c3c3c;
	}
	html {
		font-family: 'Roboto', sans-serif;
		font-weight: 400;
		background-color: #F6F6F6;
		line-height: 1.5em;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	main {
		min-height: 60vh;
	}
	h1,.text-h1,h2,.text-h2,h3,.text-h3,h4,.text-h4,h5,.text-h5,h6,.text-h6 {
		font-family: 'Roboto', sans-serif;
		font-weight: 300;
		text-transform: uppercase;
		color: var(--text-emphasis);
	}
	h1, .text-h1 {
		font-size: 2.5rem;
	}
	h2, .text-h2 {
		font-size: 2rem;
	}
	h3, .text-h3 {
		font-size: 1.75rem;
	}
	h4, .text-h4 {
		font-size: 1.5rem;
	}
	h5, .text-h5 {
		font-size: 1.25rem;
	}
	h6, .text-h6 {
		font-size: 1rem;
	}
	.heading-small {
		font-family: 'Roboto', sans-serif;
		font-size: 3rem;
		text-transform: uppercase;
		letter-spacing: 0.1rem;
		font-weight: 800;
	}
	.subheading {
		font-family: monospace;
		font-size: 1.2rem;
		text-transform: uppercase;
		letter-spacing: 0.1rem;
		font-weight: 400;
	}
	.margin-remove {
		margin: 0;
	}
	p {
		color: var(--text-body);
	}
	footer {
		border-top: 1px solid #646464;
	}

	.text-background {
		background: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	@media (prefers-color-scheme: dark) {
		html {
			background-color: #1a1a1a;
			color: rgb(199, 199, 199);
		}
		p {
			color: rgb(199, 199, 199);
		}
		h1,h2,h3,h4,h5,h6 {
			color: white;
		}
		a {
			color: var(--accent);
			text-decoration: none;
		}
		a:hover {
			color: var(--accent-hover);
		}
		a:active {
			color: var(--accent-active);
		}
		
        svg {
            fill: #cecece;
        }
	}
    .align-left {
        float: left;
        margin: 0 1rem 1rem 0;
    }
    .width-50 {
        width: 50%;
        height: auto;
    }
    .flex {
        display: flex;
        flex-wrap: wrap;
    }
    .text-align-center {
        text-align: center;
    }
	@media(min-width: 640px) {
	.flex-1 {
		flex: 1;
	}
	.flex-2 {
        flex: 2;
    }
    .flex-3 {
        flex: 3;
    }
	.flex-4 {
		flex: 4;
	}
	}	
</style>
