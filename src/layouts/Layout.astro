---
import '../styles/global.css';
import "../styles/scrollbar.css";
export interface Props {
	title: string;
}
const { title } = Astro.props;
import {ViewTransitions} from 'astro:transitions';
import OrbitalElement from '../components/OrbitalElement.astro';
import SideNav from '../components/SidebarMenu.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<div id="pageElements" style="min-height: 100vh;">
			<div id="mobileHeader">
				<a href="/" id="mainMenuLink">
					Main Menu
				</a>
			</div>
			<SideNav />
			<div id="contentDisplay" class="flex-2">
				<slot />
			</div>
		</div>
	</body>
	<OrbitalElement />
</html>
<style is:global>
	/* Mobile Navigation */
	#mobileHeader {
		display: flex;
    	width: 100%;
    	padding: 0.5rem;
    	flex-direction: row;
    	justify-content: center;
	}
	#mainMenuLink {
		font-family: var(--mono-font);
		text-transform: uppercase;
	}
	@media(min-width:640px) {
		#sidebarMenu {
			display: flex;
		}
		#mobileHeader {
			display: none;
		}
	}
	/* End Mobile Navigation */
	#contentDisplay {
		max-height: 100vh;
		max-width: 100ch;
		overflow-y: scroll;
		background-color: rgba(var(--dark-background-secondary), 80%);
	}
	#contentDisplay::before {
		content: '';
    	display: block;
    	position: sticky;
    	top: 0;
    	left: 0;
    	width: 100%;
    	height: 60px;
    	background: linear-gradient(180deg, rgb(var(--dark-background-secondary)) 0%, #00000000 100%);
		z-index: 1;
	}
	#contentDisplay::after {
		content: '';
    	display: block;
    	position: sticky;
    	bottom: 0;
    	left: 0;
    	width: 100%;
    	height: 60px;
    	background: linear-gradient(0deg, rgb(var(--dark-background-secondary)) 0%, #00000000 100%);
	}
	#pageElements {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
	}
	main {
		padding: 40px;
		position: relative;
		top: -60px;
    } 
	@media(min-width:640px) {
		main {
			padding: 80px;
			top: -50px;
		}
	}
</style>
