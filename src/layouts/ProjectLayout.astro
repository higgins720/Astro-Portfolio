---
const {title, industry, description, logo, screenshot} = Astro.props;
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import {ViewTransitions} from 'astro:transitions';
import { Image } from 'astro:assets';
import Footer from '../components/Footer.astro';
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
  <!-- ... -->
  <body>
    <Navigation />
    <main>
      <div class="logo-container">
        <Image src={logo} alt={title + "logo"} width="400" height="200" alt="logo" id="logo"/>
      </div>
      <div class="flex flex-row">
        <div class="flex-1-2">
          <h1>{title}</h1>
          <p>{industry}</p>
          <p>{description}</p>
          <slot />
        </div>
        <div id="captureContainer" class="flex-1-2">
          <Image src={screenshot} width="600" height="1200" alt="screenshot" class="site-capture"/>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>

<style is:global>
    .header {
      text-align: center;
    }
    html {
		  font-family: system-ui, sans-serif;
		  background-color: #F6F6F6;
      min-height: 100vh;
      overflow-y: scroll;
	  }
    body {
      max-width: 1000px;
      margin: 0 auto;
    }
    main {
		  padding: 40px;
      padding-top: 0;
    } 
	  @media(min-width:640px) {
		  main {
			  padding: 80px;
        padding-top: 0;
		  }
	  }
    .site-capture {
      height: auto;
      max-width: 100%;
    }
    #captureContainer {
      max-height: 80vh;
      max-width: 100%;
      overflow-y: scroll;
    }
    .flex-1-2 {
      flex: auto;
    }
    @media(min-width:640px) {
      .flex-1-2 {
        flex: 1 2;
      }
    }
    .flex-row {
      display: flex;
      flex-direction: row;
      column-gap: 5%;
    }
    .logo-container {
      display: flex;
      justify-content: center;
      padding: 40px 20px;
    }
    #logo {
      max-width: 100%;
      height: auto;
    }
</style>