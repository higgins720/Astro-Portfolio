---
import Layout from "../layouts/Layout.astro";
import info from "../../info.json";
---

<Layout title="Contact Me">
    <main>
        <div>
            <h1>Contact Me</h1>
            <p>Feel free to reach out to me at <a href="mailto:{info.contact.email}">{info.contact.email}</a>, or call <a href="tel:{info.contact.phone}">{info.contact.phone}</a>.</p>
            <form action="https://submit-form.com/FgccWuMw">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" placeholder="Name" required="" />
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Email" required="" />
                <label for="message">Message</label>
                <textarea
                  id="message"
                  name="message"
                  placeholder="Message"
                  required=""
                ></textarea>
                <button type="submit">Send</button>
              </form>              
        </div>
    </main>
</Layout>

<style>
    main {
        display: flex;
        align-items: center;
    }
    main>div {
        
    }
</style>