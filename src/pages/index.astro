---
import '../styles/global.css';
import '../styles/buttons.css';
import Layout from "../layouts/Layout.astro";
//import {Image} from 'astro:assets';
---

<Layout title="Alpha Chrome">
	<section id="container" class="flex flex-column flex-grow background-0 justify-center">
		<div class="flex flex-column">
			<div class="flex flex-column flex-align-center">
				<!-- <picture id="logoDisplay">
					<source srcset="/logos/AlphaChrome_Logo-Icon-Stroke-Blurple-Animated.svg" media="(prefers-color-scheme: dark)" />
					<source srcset="/logos/AlphaChrome_Logo-Icon-LM.svg" media="(prefers-color-scheme: light), (prefers-color-scheme: no-preference)" />
					<img decoding="async" id="logo" src="/logos/ChromeDog_Logo-Text-LM.svg" width="400" height="450" />
				</picture> -->
				<img src="/logos/AlphaChrome_Logo-Icon-Stroke-Blurple-Animated.svg" width="400px" height="310px" alt="Alpha Chrome Dog Icon" class="contain" style="margin-bottom: 40px;"/>
				<img src="/logos/AlphaChrome_Logo-Text-Stacked.svg" width="400px" height="150px" alt="Alpha Chrome" class="contain" />
				<h1 class="text-align-center"><span class="text-h2 text-color-primary">Web Design & Development</span></h1>
				<a href="/contact" class="button button-default">Contact Me -></a>
			</div>
		</div>
	</section>
</Layout>

<style>
	#container {
		margin-top: 0px;
		overflow-x: clip;
	}
	#logo {
		max-width: 100%;
		height: auto;
	}
	h1 {
		color: rgba(var(--color-muted), 1);
		font-family: var(--mono-font);
	}
	#logoDisplay {
		padding: 40px;
		background-image: url("/graphics/Grid-Accent.svg");
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;
	}
	.text-color-primary {
		color: rgb(var(--color-primary));
	}
	.contain {
		max-width: 100%;
		height: auto;
	}
</style>
