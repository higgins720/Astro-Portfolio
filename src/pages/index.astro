---
import "../styles/global.css";
import "../styles/buttons.css";
import Layout from "../layouts/Layout.astro";
// import ScrollingLogoColumn from "../components/ScrollingLogoColumn.astro";
import SplashText from "../components/SplashText.astro";
import LogoShift from "../components/LogoShift.astro";
//import {Image} from 'astro:assets';
---

<Layout title="Alpha Chrome">
  <section id="container" class="flex flex-column flex-grow justify-center">
    <div
      id="hero"
      class="flex md:flex-row justify-center flex-align-center gap-32"
    >
    <LogoShift />
      <div id="heroContent">
        <div id="alphaChrome">
        <div id="splash">
          <SplashText />
        </div>
        <img
          src="/logos/AlphaChrome_Logo-Text-Grey.svg"
          width="400px"
          height="40px"
          alt="Alpha Chrome"
          style="max-width: 100%;"
        />
        </div>
        <h1 class="text-align-center">Web Design & Development</h1>
        <a href="/contact" class="button button-primary">Get a Quote</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  #hero {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 3rem;
    max-width: 100%;
  }
  #heroContent {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    width: 600px;
    max-width: 100%;
    z-index: 1;
    position: relative;
  }
  #alphaChrome {
    display: block;
    position: relative;
  }
  #splash {
    display: none;
    position: relative;
    right: -50%;
    margin-bottom: 20px;
    transform: rotate(15deg);
    z-index: 9;
  }
  /* #splashMobile {
    display: block;
    position: relative;
    margin-bottom: 20px;
    z-index: 9;
  } */
  #container {
    margin-top: 0;
    overflow-x: clip;
    overflow-y: visible;
  }
  #logo {
    max-width: 100%;
    height: auto;
  }
  #hero h1 {
    font-size: 1.8rem;
    line-height: 2.2rem;
    text-transform: uppercase;
    margin: auto;
  }
  @media(min-width: 640px) {
    #hero h1 { 
      font-size: 2.2rem;
    }
  }
  @media(min-width: 960px) {
    #splash {
      display: block;
    }
  }
  #hero p {
    margin: auto;
  }
  #logoDisplay {
    padding: 40px;
    background-image: url("/graphics/Grid-Accent.svg");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }
  .text-color-primary {
    color: rgb(var(--color-primary));
  }
</style>
