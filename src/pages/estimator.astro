<Layout title="Estimate Calculator">
    <h1>Project Estimator</h1>
    <div id="totalDisplay">Total: <span id="total">$0.00</span></div>
    <div id="projectType" class="step">
        <h2>New Website Project</h2>
        <div class="selection" data-service="100">
            <h2>New Website</h2>
            <p>Start from nothing.</p>
        </div>
        <div class="selection" data-service="50">
            <h2>Redesign</h2>
            <p>Modernize or improve upon your existing site.</p>
        </div>
        <div class="selection" data-service="50">
            <h2>Takeover</h2>
            <p>Have Chrome Dog take control.</p>
        </div>
    </div>
    <div id="websiteType" class="step">
        <h2>Website Type</h2>
        <div>
            Option 1
        </div>
        <div>
            Option 2
        </div>
        <div>
            Option 3
        </div>
    </div>

    <div style="overflow:auto;">
        <div style="float:right;">
          <button type="button" id="prevBtn" data-step="-1">Previous</button>
          <button type="button" id="nextBtn" data-step="1">Next</button>
        </div>
    </div>

