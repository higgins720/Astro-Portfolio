---
nav: true
const currentPath = Astro.url.pathname;
---

<nav id="verticalNav">
    <ul>
        <li>
            <a href="/" class={currentPath == '/' ? 'hidden' : ''}>
                Start
            </a>
        </li>
        <li>
            <a href="/about" class={currentPath == '/about' ? 'active' : ''}>
                About
            </a>
        </li>
        <li>
            <a href="/projects" class={currentPath == '/projects' ? 'active' : ''}>
                Projects
            </a>
        </li>
        <li>
            <a href="/resume" class={currentPath == '/resume' ? 'active' : ''}>
                Resume
            </a>
        </li>
        <li>
            <a href="/contact" class={currentPath == '/resume' ? 'active' : ''}>
                Contact
            </a>
        </li>
    </ul>
</nav>

<style>
    ul {
        text-align: center;
        list-style: none;
    }
    ul > li {
        margin-right: 40px;
        display: block;
    }
    ul > li > a {
        display: inline-block;
        position: relative;
        font-family: var(--mono-font);
        text-transform: uppercase;
        letter-spacing: 0.5rem;
        transition: color 0.2s;
        font-size: 2rem;
        line-height: 4rem;
        transition: all 0.2s;
    }
    ul > li > a:hover, .active {
        color: var(--link-hover);
        text-shadow: 0 0 10px var(--glow), 0 0 20px #8800ff;
    }

    ul > li > a:hover::before {
        content: '';
        display: block;
        position: absolute;
        inset: 0;
        margin: auto;
        width: 100%;
        height: 3rem;
        /* background: radial-gradient(circle, rgba(14,0,255,1) 0%, rgba(0,0,0,0) 100%); */
        z-index: -1;
    }

    ul > li > .hidden {
        display: none;
    }
</style>