---
nav: true;
const currentPath = Astro.url.pathname;
import MainMenu from '../../menu-main.json';
---

<nav>
    <ul>
        {MainMenu.Links.map( Link => 
        <li>
            <a href={Link.Path} class={currentPath === Link.Path ? 'active' : null}>
                {Link.Name}
            </a>
        </li> 
        )}
    </ul>
</nav>

<style>
	nav {
		display: flex;
    	align-items: center;
	}
    ul {
        list-style: none;
        text-align: left;
        padding-left: 0%;
    }
    ul > li > a {
        display: inline-block;
        position: relative;
        font-family: var(--mono-font);
        text-transform: uppercase;
        letter-spacing: 0.5rem;
        transition: color 0.2s;
        font-size: 2rem;
        line-height: 3rem;
        transition: all 0.2s;
        color: rgba(var(--color-muted), 1);
    }
    .active {
        color: rgba(var(--color-primary), 1) !important;
    }
    ul > li > a:hover {
        color: var(--link-hover);
        text-shadow: none;
        color: rgba(var(--color-primary), 1) !important;
    }
    ul > li > a:active {
        color: rgba(var(--color-secondary), 1) !important;
    }
    ul > li > a:hover::before {
        content: '';
        display: block;
        position: absolute;
        inset: 0;
        margin: auto;
        width: 100%;
        height: 3rem;
        z-index: -1;
    }
    ul > li > .hidden {
        display: none;
    }
</style>