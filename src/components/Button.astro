---
export interface Props {
	text: string;
    href: string;
	styles: string;
    target: string;
}
const {text, href, styles, target} = Astro.props;
---

<a href={href} target={target} class={styles}>{text}</a>

<style>
a {
    display: inline-block;
    padding: 0.5em 1em;
    border: solid 1px #ddd;
    text-decoration: none;
    font-size: 1em;
    font-family: Consolas, monaco, monospace;
    text-transform: uppercase;
    cursor: pointer;
}
a:hover {
    background-color: #ddd;
    color: #000;
}
</style>