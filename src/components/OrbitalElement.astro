---
import {Image} from 'astro:assets';
import orbitalSVG from "../graphics/JJH_OrbitalCircles.svg"
---

<Image src={orbitalSVG} width="800px" height="800px" alt="Orbital Circles" />

<style>
    img {
        display: block;
        margin: 0 auto;
        position: absolute;
        top: 50px;
        left: 50px;
        z-index: -1;
        animation: rotate 60s linear infinite;
    }
    @keyframes rotate {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
</style>