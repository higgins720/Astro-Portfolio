---
import {Image} from 'astro:assets';
import orbitalSVG from "../graphics/JJH_OrbitalCircles.svg"
---

<Image src={orbitalSVG} id="OrbElement" width="800" height="800" alt="Orbital Circles" />

<style>
    img {
        display: block;
        position: absolute;
        margin: 0 auto;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        z-index: -1;
        max-width: 120%;
        animation: rotate 60s linear infinite;
    }
    @keyframes rotate {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
</style>