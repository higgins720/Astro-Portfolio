---
import {Image} from 'astro:assets';
import orbitalSVG from "../graphics/JJH_OrbitalCircles.svg"
---

<div id="orbitalContainer">
    <Image src={orbitalSVG} id="OrbElement" width="800" height="800" alt="Orbital Circles" />
</div>

<style>
    #orbitalContainer {
        display: flex;
        width: 100%;
        height: 100%;
        align-items: center;
        justify-content: center;
        position: absolute;
        left: 0;
        top: 0;
        overflow: hidden;
        z-index: -1;
    }
    img {
        /* display: block;
        position: absolute;
        max-width: 100%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); */
        max-width: 120%;
        animation: rotate 60s linear infinite;
    }
    @keyframes rotate {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
</style>