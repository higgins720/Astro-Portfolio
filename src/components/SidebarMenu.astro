---
import Logo from '../components/Logo.astro';
import VerticalNav from '../components/VerticalNav.astro';
import Footer from '../components/Footer.astro';
---

<div id="sidebarMenu">
    <Logo />
    <VerticalNav />
    <Footer />
</div>

<script>
const menu = document.getElementById('sidebarMenu');
const hideButton = document.getElementById('hideMenu');
const showButton = document.getElementById('showMenu');

function toggleMenu() {
    if (menu.style.display === "none") {
		menu.style.display = "flex";
		showButton.style.display = "none";
  	} else {
    	menu.style.display = "none";
		showButton.style.display = "block";
  	}
} 

hideButton.addEventListener('click', toggleMenu);
showButton.addEventListener('click', toggleMenu);
</script>

<style>
	#sidebarMenu {
		flex: 1;
		flex-direction: column;
		justify-content: space-evenly;
		align-items: center;
		max-width: 440px;
		padding: 20px 40px;
		display: none;
	}
	@media(min-width:640px) {
		#sidebarMenu {
			display: flex;
		}
	}
	#verticalNav {
		max-height: 100vh;
		width: auto;
		margin: 0 auto;
	}
	/* Sidebar Menu Buttons */
	#showMenu {
		display: inline-block;
		rotate: -90deg;
		position: relative;
		top: 50%;
		right: -20px;
	}
</style>