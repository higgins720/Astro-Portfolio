---
const {parent} = Astro.props
const {items} = Astro.props
---
<div class="tree-list">
    <span class="label">{parent}</span>
    <ul>
        {items.map(item => <li>{item}</li>)}
    </ul>
</div>

<style>
    .tree-list {
        font-family: consolas, monospace;
        margin-left: 20px;
    }
    .label {
        font-size: 1rem;
        text-transform: uppercase;
    }
    li {
        list-style: none;
        width: fit-content;
        font-size: 0.9rem;
    }
    li:after {
        content: '';
        display: block;
        position: relative;
        width: calc(100% + 20px);
        left: -10px;
        border-bottom: solid 1px #484848;
    }
    ul {
        margin-top: 10px;
        padding-left: 10px;
        border-left: 1px solid #484848;
    }
    /* div {
        display: block;
        width: auto;
    } */
</style>