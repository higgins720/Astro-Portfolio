    <ul id="footerNav">
      {
        MainMenu.Links.map((Link) => (
          <li>
            <a
              href={Link.Path}
              class={currentPath == Link.Path ? "active" : ""}
            >
              {Link.Name}
            </a>
          </li>
        ))
      }
    </ul>
    <div class="divider">
      <img src="/graphics/divider-right.svg" width="300px" height="auto" />
    </div>
    <p class="copyright">Alpha Chrome LLC | Copyright Â© {year}</p>
  </div>
</footer>

<style>
  footer {
    width: calc(100% - 40px);
    padding: 20px;
    background: transparent;
    /* background-color: rgb(var(--color-muted)); */
    /* font-family: var(--mono-font); */
    z-index: 999;
  }
  footer p {
    margin: 0;
  }
  .copyright {
    font-size: 0.8em;
    text-align: center;
  }
  #footerNav {
    display: none;
    flex-wrap: wrap;
    justify-content: end;
    list-style: none;
    gap: 1rem;
    margin: 0;
    font-size: 0.9em;
  }
  .divider {
    display: none;
  }
  @media (min-width: 640px) {
    #footerNav {
      display: flex;
    }
    .divider {
      display: block;
    }
    .copyright {
      text-align: right;
    }
  }
</style>
